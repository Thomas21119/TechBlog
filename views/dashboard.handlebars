<button type="submit" class="btn" id="newPostBtn"><a class="link" href="/dashboard/new">+ New Post</a></button>
{{#if posts.length}}
<section>
  <h2 id="yourPosts">Your Posts</h2>
    {{#each posts as |post|}}
      {{> dashboardPostInfo post}}
    {{/each}}
</section>
{{/if}}
<script src="/javascript/addPost.js"></script>